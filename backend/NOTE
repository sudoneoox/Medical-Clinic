// make a .env file in this directory with this format
DB_HOST=localhost
DB_PORT=5432
DB_NAME=XXXXXX
DB_USER=XXXXXX
DB_PASSWORD=XXXXXX


// to initialize a database locally on your computer:
// https://www.postgresql.org/docs/17/index.html

sudo -u postgres initdb -D /var/lib/postgres/data

// enable the service
sudo systemctl enable postgresql
sudo systemctl start postgresql

// create db
sudo -u postgres createdb $DB_NAME

// create user for db
sudo -u postgres createuser --interactive

// set password for user
sudo -u postgres psql
\password $DB_USER

// grant all privileges to user
GRANT ALL PRIVILEGES ON DATABASE $DB_NAME TO $DB_USER;
\q

// to see db changes start dbeaver and connect to the medical clinic db with credentials above

// delete db locally
sudo -u postgres dropdb $DB_NAME

// to view to see if the db was crated
sudo -u postgres psql
\list

// create table .sql file
CREATE TABLE table_name (
    Column name + data type + constraints
    column_name1 data_type PRIMARY KEY,
    column_name2 data_type NOT NULL,
    column_name3 data_type
);


